{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "declaration": true, // Active generation of d.ts files
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "esModuleInterop": true, // Ease interoperability between CommonJS and ES Modules
    "importHelpers": true, // Reduce bundle size by reusing common helpers (need tslib)
    "jsx": "react",
    "lib": ["es2021", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
